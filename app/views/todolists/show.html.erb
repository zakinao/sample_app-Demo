<h1>詳細画面</h1>
<h2>タイトル</h2>
<p><%= @list.title %></p>
<h2>本文</h2>
<p><%= @list.body %></p>
<h2>画像</h2>
<%= attachment_image_tag @list, :image, :fill, 300, 300, format: 'jpeg' %>

<%= link_to "編集", edit_todolist_path(@list.id),class: "edit" %>
<%= link_to "削除", todolist_path(@list.id), method: :delete, data: {confirm: '本当に削除しますか？'} %>